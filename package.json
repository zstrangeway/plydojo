{
  "name": "plydojo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "cd apps/plydojo-infra && pnpm dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:smoke": "turbo test:smoke",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "unlock": "cd apps/plydojo-infra && pnpm unlock",
    "deploy": "cd apps/plydojo-infra && pnpm deploy",
    "deploy:staging": "cd apps/plydojo-infra && pnpm sst deploy --stage staging",
    "deploy:production": "cd apps/plydojo-infra && pnpm sst deploy --stage production"
  },
  "devDependencies": {
    "@plydojo/eslint-config": "workspace:*",
    "@plydojo/typescript-config": "workspace:*",
    "@plydojo/plydojo-ui": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
